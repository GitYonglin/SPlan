/* component/goods-list/goods-list.wxss */
.main {
  margin: 5px;
  padding: 5px;
  border: 1px solid #F2f2f2;
  border-radius: 8px;
  white-space: normal;
}
.item {
  height:256rpx;
  width:100%;
  display:flex;
}
.img-content {
  height: 100%;
  width: 256rpx;
  display:flex;
  align-items:center;
  justify-items:center;
}
.img {
  height: 256rpx;
  width: 256rpx;
}
.content {
  flex: 1;
  height:100%;
  display: flex;
  flex-direction: column;
  width: 225px;
}
/* .name {
  height: 48rpx;
} */
.del {
  width: 100%;
  display:flex;
  padding: 2rpx 0;
  font-size: 28rpx;
  text-indent: 2em;
  color: #999999;
  /* white-space: normal; */
}
.del-text {
  text-overflow:ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
  overflow: hidden; 
}
.other, .name {
  height:48rpx;
  display:flex;
  justify-content:space-between;
  align-items: flex-end;
}
.price {
  color: #F95555;
}
.unit, .inventory {
  font-size: .7rem;
  color: #999999;
}
.or {
  color: #999999;
}