/* component/goods-list/goods-list.wxss */
.main {
  /* margin: 20rpx;
  padding: 5px;
  border-radius: 8px; */
  padding: 5px;
  margin: 15rpx 0rpx;
  white-space: normal;
  background-color:#FFF;
}
.item {
  height:226rpx;
  width:100%;
  display:flex;
  position: relative;
}
.img-content {
  height: 100%;
  width: 216rpx;
  display:flex;
  align-items:center;
  justify-items:center;
}
.img {
  height: 100%;
  width: 100%rpx;
}
.content {
  flex: 1;
  height:100%;
  display: flex;
  flex-direction: column;
  width: 225px;
  border-bottom: 1px solid #e9eaec;
}
.content .name {
  font-size: 32rpx;
  color: #1c2438;
}

.del {
  width: 100%;
  display:flex;
  flex-direction: column;
  padding: 2rpx 0;
  color: #495060;
}
.del-text {
  flex: 1;
  font-size: 24rpx;
  text-indent:2em;
  line-height: 36rpx;
  text-overflow:ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.del-tag {
  flex: 1;
  display: flex;
  justify-content: start;
  align-items: center;
  overflow: hidden;
}
.tag-item {
  color: white;
  font-size: 24rpx;
  flex-shrink: 0;
  margin: 0 2rpx;
  padding: 0 15rpx;
  border-radius: 14rpx;
  background: linear-gradient(to right , rgb(250, 150, 0) 5% , rgb(250, 80, 0) 100%);
  /* white-space: nowrap; */
}

.other, .name {
  height:36rpx;
  display:flex;
  justify-content:space-between;
  align-items: flex-end;
}
.price {
  color: #F95555;
}
.unit, .inventory {
  font-size: .7rem;
  color: #999999;
}
.or {
  color: #999999;
}

.time {
  position: absolute;
  display: flex;
  align-items: center;
  top: 0;
  left: 0;
  font-size: 24rpx;
  background-color: rgba(0, 0, 0, .1);
  border-radius: 15rpx
}
