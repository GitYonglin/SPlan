/**index.wxss**/
.btn-content{
  position: fixed;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index: 1;
}
.btn-content text {
  color: #32c617;
  font-weight: bold;
}

.main.ff {
  filter:blur(6rpx);
}
.main {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  background: white;
}
.tabs {
  width: 100%;
  height: 32px;
  white-space: nowrap;
  background-color: #f8f8f9;
  box-shadow: 0 1px 6px rgba(0,0,0,.3);
  z-index: 1;
}
.tabs-item{
  width: 25%;
  height: 30px;
  display: inline-block;
  vertical-align: top;
  text-align: center;
  line-height: 30px;
  border-top: 1px solid #f2f2f2;
  border-bottom: 1px solid #f2f2f2;
  transition: .5s;
}
.tabs-item.active {
  color: #32c617;
  border-color: #32c617;
}

.content {
  flex: 1;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
}

